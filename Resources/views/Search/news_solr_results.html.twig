<div class="rz-search-list-container">
    <h4 class="rz-search-list-title">
        <a href="{{ url( route, { 'permalink': result.fields.url, '_format': 'html' }) }}">{{ result.fields.title }}</a> {% if result.fields.author is defined %}| <b>{{ result.fields.author }}</b>{% endif %}
    </h4>
    <div class="srz-search-list-information">
        <div class="srz-search-list-container">
            <div class="srz-search-list-content">
                <div class="row-fluid">
                    <div class="span12">{{ result.fields.description }}</div>
                </div>
                {% set highlight = highlighting.getResult(result.fields.id)  %}
                {%  set highlighted =  highlight | rz_search_highlight %}
                {% if highlighted %}
                    <div class="row-fluid">
                        <div class="span12">
                            <blockquote>
                                <p><small>... {{ highlighted | raw }} ...</small></p>
                            </blockquote>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>