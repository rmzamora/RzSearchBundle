{% extends sonata_block.templates.block_base %}

{% block block %}
    <div class="rz-search-block-search-container" style="text-align: center">
        <form action="{{ path("rz_search_default") }}" class="form-search" method="GET">
            <input type="text" class="input-medium search-query" name="rz_q" value="{{ rz_q }}" style="min-width:300px">
            <input type="hidden" class="input-medium search-query" name="rz_type" value="{{ settings.filter }}">
            <button type="submit" class="btn">Search</button>
        </form>
    </div>
{% endblock %}
